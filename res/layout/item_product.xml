<?xml version="1.0" encoding="utf-8"?>
<!-- Definig a container for you List Item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileList"
    android:layout_width="fill_parent"
    android:layout_height="200dip"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:orientation="horizontal" >

    <!-- Defining where should text be placed. You set you text color here -->

    <ImageView
        android:id="@+id/listImage"
        android:layout_width="200dip"
        android:layout_height="200dp"
        android:layout_marginTop="10dip"
        android:paddingLeft="5dip"
        android:paddingRight="20dip"
        android:src="@drawable/ic_launcher"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/productListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="ProductName"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/productListPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productListName"
            android:layout_margin="4dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="Price"
            android:textColor="#f00"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/productListWishList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productListPrice"
            android:layout_margin="4dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/notinwishlist"
            android:gravity="center" />

        <TextView
            android:id="@+id/productListStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="StoreName"
            android:textColor="#0f0"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>