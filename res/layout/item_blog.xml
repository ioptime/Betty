<?xml version="1.0" encoding="utf-8"?>
<!-- Definig a container for you List Item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blogList"
    android:layout_width="fill_parent"
    android:layout_height="200dip"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:orientation="horizontal" >

    <!-- Defining where should text be placed. You set you text color here -->

    <ImageView
        android:id="@+id/blogListImage"
        android:layout_width="100dip"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dip"
        android:paddingLeft="5dip"
        android:paddingRight="20dip"
        android:src="@drawable/ic_launcher"
        android:visibility="visible" />

    <TextView
        android:id="@+id/blogListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="4dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/blogListImage"
        android:gravity="center"
        android:text="Blog Heading"
        android:textColor="#000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/blogListDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogListName"
        android:layout_margin="4dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/blogListImage"
        android:gravity="center"
        android:maxLines="3"
        android:minLines="1"
        android:text="Desc"
        android:textColor="#000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/blogListAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/blogListDesc"
        android:layout_margin="4dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="Author"
        android:textColor="#f00"
        android:textSize="18sp" />

</RelativeLayout>